# MyDrReferral Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "ap-south-1"
project_name = "mydrreferral"
environment = "production"

# Domain Configuration
domain_name = "mydrreferral.com"

# Database Configuration
db_password = "your-secure-database-password"

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key"

# Optional: Custom VPC CIDR
# vpc_cidr = "10.0.0.0/16"

# Optional: Custom instance types
# api_instance_type = "t3.small"
# db_instance_class = "db.t3.small"
